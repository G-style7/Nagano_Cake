<div class ="container ">
 <div class = "row-2 mt-3 ">
   <div class = "col-3 text-center mb-4 bg-secondary">
    <h2>管理者ログイン</h2>
   </div>
 </div>
    <table class ="table">
     <tbody>
     <%= form_with model: @admin ,url: admin_session_path, local: true do |f| %>
      <div class="row mb-3">
       <div class="col-3 mt-3">
         <tr>
          <td></td>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></td>
          <td></td>
         </tr>
         <tr>
          <td></td>
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password",class: "form-control" %></td>
          <td></td>
         </tr>
       </div>
      </div>
     </tbody>
    </table>
    <div class ="row">
        <div class="col-3 mt-3 mx-auto">
         <td></td>
         <td></td>
         <td><%= f.submit "ログイン" ,class: "btn-block btn btn-primary" %></td>
             <% end %>
        </div>
       </div>
 </div>

