 <div class = "container">
  <div class = "row" >
    <div class = "col-auto">
    <h1>ジャンル一覧・追加</h1>
     <%= form_with model: @genre, url: admin_genres_path ,method: :post do |f| %>
     <%= f.label "ジャンル名" %>
     <%= f.text_field :name ,class: "form-control genre_name", :placeholder => "ジャンル名" %><br>
     <%= f.submit "新規登録" ,class: "btn btn-success" %>
     <% end %>
   </div>
  </div>
 </div>

 <div class = "row" >
 <div class = "col-4 offset-1">
    <h2>ジャンル</h2>
     <table class= "table" >
        <% @genres.each do |genre| %>
       <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する" ,edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
       </tr>
        <% end %>
     </table>
 </div>
 </div>