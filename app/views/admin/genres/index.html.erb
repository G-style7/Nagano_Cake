 <div class = "container">
  <div class = "row mb-5">
    <h1>ジャンル一覧・追加</h1>
  </div>
  <table class = "table">
  <div class = "row">
    <%= form_with model: @genre, url: admin_genres_path ,method: :post do |f| %>
     <tr>
      <td><%= f.label "ジャンル名" %></td>
      <td><%= f.text_field :name ,class: "form-control genre_name", :placeholder => "ジャンル名" %></td>
      <td><%= f.submit "新規登録" ,class: "btn btn-success" %></td>
       <% end %>
     </tr>
  </div>
  </table>
  <div class = "row" >
   <div class = "col-4">
    <table class ="table">
     <thead>
      <tr>
       <th>ジャンル</th>
      </tr>
     </thead>
     <% @genres.each do |genre| %>
     <tbody>
      <tr>
       <td><%= genre.name %></td>
       <td><%= link_to "編集する" ,edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
  </div>
 </div>

