  <div class ="container">
   <div class ="row" >


    <h1>注文履歴一覧</h1>
    <table class = "table" >
     <div class "col">
      <thead>
       <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id) %></td>
        <td><%= order.name %></td>
        <% total= 0 %>
        <td><% order.order_details.each do |order_detail| %> 
            <% total+=order_detail.amount %>
            <% end %>
            <%= total %>
        </td>
        <td><%= order.status_i18n %></td>
       </tr>
       <% end %>
      </tbody>
     </div>
    </table>
   </div>
  </div>
