  <div class ="container">
   <div class ="row" >


    <h1>注文履歴一覧</h1>
    <table class = "table" >
     <div class "col">
      <thead>
       <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%= order.name %></td>
        <td><%= order.created_at %></td>
        
        <% total= 0 %>
        <td><% order.order_details.each do |order_detail| %> 
            <% total+=order_detail.amount %>
            <% end %>
            <%= total %>
        </td>
        <td><%= order.status %></td>
       </tr>
       <% end %>

      </tbody>
     </div>
    </table>
   </div>
  </div>
