<div class = "container" >
 <div class = "row" >
  <div class ="col-auto" >
   <h1>商品新規登録</h1>
  </div>
     <%= form_with model: @item , method: :post do |f| %>

      <%= f.label "商品画像" %>
      <%= f.file_field :image, class: "form-control-file" %><br> <%# imageはカラム名（has_one_attached）と同じ %>

      <%= f.label "商品名" %><br>
      <%= f.text_field :name, class: "form-control item_name", :placeholder => "商品名" %><br>

      <%= f.label "商品説明" %><br>
      <%= f.text_area :introduction, class: "form-control item_explanation" , :placeholder => "ここに説明文を記述します" %><br> <%# explanation(説明) %>


      <%= f.label "ジャンル" %><br>
      <%= f.select :genre_id, ['ケーキ','プリン','焼き菓子','キャンディ'], {include_blank: '--選択して下さい--'} %><br>


      <%= f.label '販売ステータス' %><br>
      <%= f.label "is_active",'販売中', value: true %>
      <%= f.radio_button :is_active, 'true' %>
      <%= f.label "is_active",'販売停止中', value: false %>
      <%= f.radio_button :is_active, 'false' %><br>
      <%= button_to "新規登録" ,admin_items_path, method: :post ,class: "btn btn-success" %>
   </div>


  <% end %>
 </div>
</div>
