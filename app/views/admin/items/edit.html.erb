<div class = "container" >
 <div class = "row" >
  <div class ="col-auto" >
   <h1>商品編集</h1>
  </div>
     <%= form_with model: @item ,url: admin_item_path(@item.id) , method: :patch do |f| %>

      <%= f.label "商品画像" %>
      <%= f.file_field :image, class: "form-control-file" %><br> <%# imageはカラム名（has_one_attached）と同じ %>

      <%= f.label "商品名" %><br>
      <%= f.text_field :name, class: "form-control item_name" %><br>

      <%= f.label "商品説明" %><br>
      <%= f.text_area :introduction, class: "form-control item_explanation" %><br> <%# explanation(説明) %>


      <%= f.label "ジャンル" %><br>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) ,{include_blank: '--選択して下さい--'} %><br>
      <%#= f.select :genre_id, ['ケーキ','プリン','焼き菓子','キャンディ'], {include_blank: '--選択して下さい--'} %>

      <%= f.label "税抜価格" %><br>
      <%= f.text_field :price , class: "form-controll"  %><br>

      <%= f.label '販売ステータス' %><br>
      <%= f.label "is_active",'販売中', value: true %>
      <%= f.radio_button :is_active, 'true' %>
      <%= f.label "is_active",'販売停止中', value: false %>
      <%= f.radio_button :is_active, 'false' %><br>
      <%= f.submit "変更を保存" ,class: "btn btn-success" %>
     <% end %>
   </div>
