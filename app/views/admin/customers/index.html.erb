 <div class ="container">
   <div class ="row" >


    <h1>会員一覧</h1>
    <table class = "table" >
     <div class "col">
      <thead>
       <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @customers.each do |customer| %>
       <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.full_name ,admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td>
         <% if customer.is_deleted %>
          <p>退会</p>
         <% else %>
          <p>有効</p>
         <% end %>
        </td>
       </tr>
       <% end %>

      </tbody>
     </div>
    </table>
   </div>
  </div>
