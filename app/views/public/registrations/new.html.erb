 <div class = "container">
  <div class ="row">
  <div class ="col">
<h2>新規会員登録</h2>

   <%= form_with model: @customer,url: customer_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <table class="table">
    <tbody>
     <tr>
      <td><%= f.label :名前 %></td>
      <td><%= f.label :（姓） %></td>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
      <td><%= f.label :（名） %></td>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
     </tr>
     <tr>
      <td><%= f.label :フリガナ %></td>
      <td><%= f.label :（セイ） %></td>
      <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
      <td><%= f.label :（メイ） %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
     </tr>
     <tr>
       <td><%= f.label :メールアドレス %></td>
       <td></td>
       <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
     </tr>
     <tr>
       <td><%= f.label :郵便番号 %></td>
       <td></td>
       <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
     </tr>
     <tr>
       <td><%= f.label :住所 %></td>
       <td></td>
       <td colspan="3"><%= f.text_field :address, autofocus: true, style: "width: 80%" ,autocomplete: "address" %></td>
     </tr>
     <tr>
       <td><%= f.label :電話番号 %></td>
       <td></td>
       <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
     </tr>
     <tr>
       <td><%= f.label :パスワード（6文字以上） %></td>
       <td></td>
       <% if @minimum_password_length %>
       <% end %>
       <td><%= f.password_field :password, autocomplete: "new-password" %></td>
     </tr>
     <tr>
       <td><%= f.label :パスワード（確認用）%></td>
       <td></td>
       <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
     </tr>
     <div class="col col-3">
      <td></td>
      <td></td>
      <td><%= f.submit "新規登録" ,class: "btn btn-success btn-block" %></td>
     </div>
     <% end %>
    </tbody>
   </table>
  <div class = "col-4 text-center mt-3 bg-secondary">
   <h2>既に登録済みの方</h2>
  </div>

  <%= render "public/shared/links" %>

    </div>
   </div>
