 <div class = "container">
  <div class ="row">
  <div class ="col">
<h2>新規会員登録</h2>

   <%= form_with model: @customer,url: customer_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <form>
   <div class="field mb-4 mt-5">
    <%= f.label :名前　　　　　　　%>
    <%= f.label :（姓）%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
   </div>
   <div class="field mb-4">
    <%= f.label :フリガナ　　　　%>
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
   </div>
   <div class="field mb-4">
    <%= f.label :メールアドレス　　　　　 %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div>
   <div class="field mb-4">
    <%= f.label :郵便番号　　　　　　　　 %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
   </div>
   <div class ="field mb-4">
    <%= f.label :住所　　　　　　　　　　%>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
   </div>
   <div class="field mb-4">
    <%= f.label :電話番号　　　　　　　　%>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
   </div>
   </form>
    <div class="field">
      <%= f.label :パスワード（6文字以上） %>
       <% if @minimum_password_length %>
       <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    <div class="field mt-4 mb-4">
      <%= f.label :パスワード（確認用）　　%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "新規登録" ,class: "btn btn-success" %>
    </div>
   <% end %>
  <div class = "col-4 text-center mt-3 bg-secondary">
   <h2>既に登録済みの方</h2>
  </div>
  <%= render "public/shared/links" %>
  
    </div>
   </div>
