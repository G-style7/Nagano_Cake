 <div class = "container">
  <div class = "row">
   <div class ="col-3 bg-secondary text-center">
     <h2 class = "content">配送先編集</h2>
    </div>
   </div>
     <%= form_with model: @address, url: address_path ,method: :patch do |f| %>　<%# method: :post はなくてもよい %>
  <div class="row">
   <div class="col-8">
    <table class ="table">
     <tr>
      <td><%= f.label "郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :postal_code ,class: "form-control" %></td>
     </tr>
     <tr>
      <td><%= f.label "住所" %></td>
      <td><%= f.text_field :address ,class: "form-control" %></td>
     </tr>
     <tr>
      <td> <%= f.label "宛名" %></td>
      <td><%= f.text_field :name ,class: "form-control" %></td>
      <td><%= f.submit "変更内容を保存" ,class: "btn btn-success" %></td>
     </tr>
     <% end %>
    </table>
   </div>
  </div>
 </div>