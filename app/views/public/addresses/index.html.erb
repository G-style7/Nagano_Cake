<div class ="container">
   <div class ="row" >


    <h1>配送先一覧</h1>
     <%= form_with model: @address, url: addresses_path ,method: :post do |f| %>　<%# method: :post はなくてもよい %>
      <%= f.label "郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code ,class: "form-control" %><br>

      <%= f.label "住所" %>
      <%= f.text_field :address ,class: "form-control" %>

      <%= f.label "宛名" %>
      <%= f.text_field :name ,class: "form-control" %>
      <%= f.submit "新規登録" ,class: "btn btn-success" %>
     <% end %>

    <table class = "table" >
     <div class "col">
      <thead>
       <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
       <% @addresses.each do |address| %>
       <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
         <%= link_to "編集する" ,edit_address_path(address.id) ,class: "btn btn-success" %> <%# (address.id)の理由 %>
        </td>
        <td>
         <%= link_to "削除する" ,address_path(address.id), method: :delete ,class: "btn btn-danger" %>

        </td>
       </tr>
       <% end %>

      </tbody>
     </div>
    </table>
   </div>
  </div>