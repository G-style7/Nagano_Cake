<div class ="container">
   <div class ="row mt-3" >
    <h3 class ="bg-light">配送先登録/一覧</h3>
   </div>
   <div class ="row">
    <div class ="col-7">
     <%= form_with model: @address, url: addresses_path ,method: :post do |f| %>　<%# method: :post はなくてもよい %>
     <table class ="table">
     <tr>
      <td><%= f.label "郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :postal_code ,class: "form-control" %></td>
     </tr>
     <tr>
      <td><%= f.label "住所" %></td>
      <td><%= f.text_field :address ,class: "form-control" %></td>
     </tr>
     <tr>
       <td><%= f.label "宛名" %></td>
       <td><%= f.text_field :name ,class: "form-control" %></td>
       <td><%= f.submit "新規登録" ,class: "btn btn-success" %></td>
     </tr>
     </table>
     <% end %>
    </div>
   </div>
    <div class  "col">
     <table class = "table table-bordered">
      <thead>
       <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
       <% @addresses.each do |address| %>
       <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
         <%= link_to "編集する" ,edit_address_path(address.id) ,class: "btn btn-success" %> <%# (address.id)の理由 %>
         <%= link_to "削除する" ,address_path(address.id), method: :delete ,class: "ml-3 btn btn-danger" %>
        </td>
       </tr>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
  </div>