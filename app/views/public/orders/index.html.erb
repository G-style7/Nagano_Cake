<div class ="container">
   <div class ="row" >
    
    <h1>注文履歴一覧</h1>
    <table class = "table" >
     <div class "col">
      <thead>
       <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
       </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= order.item.name %></td>
        <td><%#= order. %></td> <%#= #商品合計金額と送料の合計をいれたい 請求金額＝支払い金額？%>
        <td><%= order.status %></td>
        <td><%= link_to "表示する" ,url: order_path(order.id) ,class: "btn btn-primary" %></td>
       </tr>
       <% end %>
      </tbody>
     </div>
    </table>
   </div>
  </div>
