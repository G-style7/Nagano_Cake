  <div class = "container">
   <div class = "row">
    <div class ="col-2 bg-secondary">
     <h2 class = "content text-center mt-2">マイページ</h2>
    </div>
   </div>
  <div class = "row mt-3">
    <h4>登録情報</h4>
    <div class = "col ml-5">
    <%= link_to "編集する" ,customers_information_edit_path ,class: "btn btn-success" %>
   </div>
  </div>
   <div class ="row mt-3">
    <div class ="col-8">
     <table class = "table table-bordered text-left" >
      <tbody>
       <tr>
         <td><%= "氏名" %></td>
         <td><%= @customer.full_name %></td>
       </tr>
       <tr>
         <td><%= "カナ" %></td>
         <td><%= @customer.full_name_kana %></td>
       </tr>
       <tr>
         <td><%= "郵便番号" %></td>
         <td><%= @customer.postal_code %></td>
       </tr>
       <tr>
         <td><%= "住所" %></td>
         <td><%= @customer.address %></td>
       </tr>
       <tr>
         <td><%= "電話番号" %></td>
         <td><%= @customer.telephone_number %></td>
       </tr>
       <tr>
         <td><%= "メールアドレス" %></td>
         <td><%= @customer.email %></td>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
    <div class = "row">
     <div class="col-2">
      <h3>配送先</h3>
     </div>
     <div class = "col-3">
      <%= link_to "一覧を見る" ,addresses_path ,class: "btn btn-primary" %>
     </div>
    </div>
    <div class ="row mt-3">
     <div class="col-2">
      <h3>注文履歴</h3>
     </div>
     <div class ="col-3">
      <%= link_to "一覧を見る" ,orders_path , class: "btn btn-primary" %>
     </div>
    </div>
 </div>
