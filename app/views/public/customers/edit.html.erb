<div class = "container">
   <div class = "row">
    <div class ="col-5 bg-secondary">
     <h2 class = "content">会員情報編集</h2>
    </div>
   </div>
  </div>

  <div class = "row mt-5" >
   <div class = "col offset-2 mr-4" >
     <%= form_with model: @customer ,url: customers_information_path ,method: :patch do |f| %>
      <table class = "col-4 text-center" >
       <tr>
        <td><%= f.label "氏名" %></td>
        <td><%= f.text_field :last_name ,class: "form-control" %></td>
        <td><%= f.text_field :first_name ,class: "form-control" %></td>
       </tr>
       <tr>
        <td><%= f.label "フリガナ" %></td>
        <td><%= f.text_field :last_name_kana ,class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana ,class: "form-control" %></td>
       </tr>
       <tr>
        <td><%= f.label "郵便番号" %></td>
        <td><%= f.text_field :postal_code ,class: "form-control" %></td>
       </tr>
       <tr>
        <td><%= f.label "住所" %></td>
        <td><%= f.text_field :address ,class: "form-control" %></td>
       </tr>
       <tr>
        <td><%= f.label "電話番号" %></td>
        <td><%= f.text_field :telephone_number ,class: "form-control" %></td>
       </tr>
       <tr>
        <td><%= f.label "メールアドレス" %></td>
        <td><%= f.text_field :email ,class: "form-control" %></td>
       </tr>
       <tr>
        <td></td>
        <td><%= f.submit "編集内容を保存" ,class: "btn btn-primary" %></td>
        <td><%= link_to "退会する", customers_unsubscribe_path ,class: "btn btn-sm btn-danger" %></td>
       </tr>
      </table>
    <% end %>
   </div>
  </div>
