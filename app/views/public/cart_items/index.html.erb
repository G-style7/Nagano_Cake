 <div class ="container">
  <div class ="row" >
     <div class = "col-8">
      <h3>ショッピングカート</h3>
     </div>
     <div class ="col-4 text-center">
       <%= link_to "カートを空にする" ,cart_items_destroy_all_path, method: :delete ,class: "btn btn-danger" %>
     </div>
  </div>
      <table class = "table" >
       <div class  "row">
        <thead>
         <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
         </tr>
        </thead>
        <tbody>
         <% @items.each do |item| %>
          <tr>
           <td><%= item.name %></td>
           <td><%= item.with_tax_price %></td>
           <td><%#= item.sum_price %></td>
          <%= form_with model: @cart_item do |f| %>
           <td>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更" , url: cart_items_path , method: :patch, class: "btn btn-success" %>
          </td>
          <td><%= f.submit "削除する",url: cart_items_path, method: :delete, class: "btn btn-danger" %></td> <%# submit にurlとmethod指定いい？ %>
          </tr>
          <% end %>
         <% end %>
        </tbody>
       </div>
      </table>
       <div class ="row" >
        <div class = "col-6 text-left">
         <%= link_to "買い物を続ける" ,items_path, class: "btn btn-primary" %>
        </div>
        <div class = "col-5">
         <tr>
          <td><%= "合計金額" %></td>
          <td>¥<%= @total.round.to_s(:delimited)%></td> <%# 小計の合計をいれたい %>
         </tr>
        </div>
       </div>
       <div class = "row mt-4" >
        <div class = "col mr-4">
         <%= link_to "情報入力に進む" ,new_order_path ,class: "btn btn-success" %>
        </div>
       </div>

 </div>